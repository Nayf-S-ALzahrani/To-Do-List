<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/to_do_title_label"
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_do_title_label"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/to_do_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/to_do_hint"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/description_title_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/description_title_label"
        android:textSize="16sp"
        android:textStyle="bold|italic" />


    <EditText
        android:id="@+id/description_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/description_hint"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/the_entry_date_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/entry_date_label"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/entry_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="sut Nov 6 05:16 EST 2021" />

    <TextView
        android:id="@+id/the_reminder_date_label"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="@string/reminder_date_label"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/reminder_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="sut Nov 6 05:16 EST 2021" />

    <CheckBox
        android:id="@+id/is_done_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Is Done" />


</LinearLayout>